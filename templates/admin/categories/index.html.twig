{% extends "base.html.twig" %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% include "_partials/_adminnav.html.twig" %}
            <main class="col-9 p-3" style="background-color: #2c2f36;">
                <h1 class="text-white">Liste des catégories</h1>
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Parent</th>
                            <th>Slug</th>
                            <th>Ordre</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for categorie in categories %}
                            <tr>
                                <td>{{ categorie.id }}</td>
                                <td>{{ categorie.name }}</td>
                                <td>
                                    {% if categorie.parent is not null %}
                                        {{ categorie.parent.name }}
                                    {% else %}
                                        <span class="text-muted">No Parent</span>
                                    {% endif %}
                                </td>
                                <td>{{ categorie.slug }}</td>
                                <td>{{ categorie.categoryOrder }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </main>
        </div>
    </div>
{% endblock %}
